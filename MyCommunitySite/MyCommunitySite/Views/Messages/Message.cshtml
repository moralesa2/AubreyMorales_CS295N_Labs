@model Message
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Message";
}
<h2>Add Message</h2>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SenderId" value="User.Id"/>
        <div class="row">
            <label asp-for="RecipientId" class="col-sm-1 form-label">Recipient</label>
            <div class="col-sm-3">
                <select asp-for="RecipientId" class="form-select" required>
                @foreach (AppUser user in ViewBag.AppUsers)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
                </select>
                <br />
            </div>
        </div>

        <div class="row">
            <label asp-for="Subject" class="col-sm-1 form-label">Subject</label>
            <div class="col-sm-3">
                <input asp-for="Subject" name="Subject" class="form-control" /><br />
            </div>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="row">
            <label asp-for="Content" class="col-sm-1 form-label">Content</label>
            <div class="col-sm-4">
                <textarea asp-for="Content" name="Content" class="form-control" rows="3" required></textarea>
            </div><br />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        @* padding *@
        <div class="row pt-4">
            <label asp-for="Priority" class="col-sm-1 form-label">Priority</label>
            <div class="col-sm-2">
                <input asp-for="Priority" name="Priority" class="form-control" default="5" min="1" max="5" required/><br />
            </div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Messages" asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>