@model List<Message>
@{
    ViewData["Title"] = "Messages";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-controller="Messages" asp-action="Add">Write a Message</a>
</div>
Filter Messages:
<div class="d-flex align-items-center mb-2 mt-2">
    <form method="post" action="/Messages/Filter" class="d-flex">
        <input class="me-1" name="sender" placeholder="Sender"/>
        <input class="me-1" name="date" placeholder="MM/DD/YYYY"/>
        <button class="btn-primary me-1" type="submit">Submit</button>
    </form>
    <form method="post" action="/Messages" class="d-flex">
        <button class="btn-primary" type="submit">Clear Filters</button>       
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Recipient</th>
            <th>Subject</th>
            <th>Content</th>
            <th>Time Sent</th>
            <td>Priority</td>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Sender.UserName</td>
                    <td>@message.Recipient.UserName</td>
                    <td>@message.Subject</td>
                    <td>
                        <textarea>@message.Content</textarea>
                    </td>
                    <td>@message.TimeSent</td>
                    <td>@message.Priority</td>
                    <td>
                        <a asp-controller="Messages" asp-action="Edit" asp-route-id="@message.MessageId">Edit</a>
                        <a asp-controller="Messages" asp-action="Delete" asp-route-id="@message.MessageId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>There are no messages.</p>
        }
    </tbody>
</table>