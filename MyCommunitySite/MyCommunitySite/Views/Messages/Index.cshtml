@model List<Message>
@{
    ViewData["Title"] = "Messages";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-controller="Messages" asp-action="Add">Write a Message</a>
</div>
<h4>Posted Messages</h4>
Filter Messages:
<form method="post" action="/Messages/Filter">
<label name="sender">Sender</label><br />
<input name="sender"/><br />
<label name="date">Date</label><br />
<input name="date"/><br />
<button type="submit">Submit</button>
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Recipient</th>
            <th>Subject</th>
            <th>Content</th>
            <th>Time Sent</th>
            <td>Priority</td>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Sender.Name</td>
                    <td>@message.Recipient.Name</td>
                    <td>@message.Subject</td>
                    <td>
                        <textarea>@message.Content</textarea>
                    </td>
                    <td>@message.TimeSent</td>
                    <td>@message.Priority</td>
                    <td>
                        <a asp-controller="Messages" asp-action="Edit" asp-route-id="@message.MessageId">Edit</a>
                        <a asp-controller="Messages" asp-action="Delete" asp-route-id="@message.MessageId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>There are no messages.</p>
        }
    </tbody>
</table>